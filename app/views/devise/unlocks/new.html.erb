<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="form-group">
        <h2>Resend unlock instructions</h2>
        <%= form_for(resource,
            as: resource_name,
            url: unlock_path(resource_name),
            html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "Enter your registered email", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Resend unlock instructions", class: "btn btn-success btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
