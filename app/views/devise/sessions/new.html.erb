<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="form-group">
        <h2>Log in</h2>
        <div class="buttons" style="margin-top: 20px;">
          <ul>
            <li>
              <%= link_to user_facebook_omniauth_authorize_path do %>
                <div class="btn btn-default btn-facebook">
                  <span class="fa fa-facebook"></span>
                  Facebook
                </div>
              <% end %>
            </li>
            <li>
              <%= link_to user_twitter_omniauth_authorize_path do %>
                <div class="btn btn-default btn-twitter">
                  <span class="fa fa-twitter"></span>
                  Twitter
                </div>
              <% end %>
            </li>
            <li>
              <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                <div class="btn btn-default btn-google">
                  <span class="fa fa-google"></span>
                  Google
                </div>
              <% end %>
            </li>
          </ul>
        </div>

        <hr>

        <%= form_for(resource,
            as: resource_name,
            url: session_path(resource_name),
            html: { class: "login" }) do |f| %>
        <%= devise_error_messages! %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control" %>
            <p id="email-error" style="color:red; display:none"></p>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, placeholder: "Enter password", class: "form-control" %>
            <p id="password-error" style="color:red; display:none;"></p>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, type: "checkbox" %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-warning btn-block" %>
          </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
