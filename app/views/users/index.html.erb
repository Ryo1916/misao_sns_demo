<div class="container-fluid" style="background: linear-gradient(#D3D8E8, white);">
  <div class="row" style="padding:20px 0;">
    <div class="col-md-6 offset-md-3">
      <h2>Users</h2>
      <div class="card">
      <div class="card-body">
        <% @users.each do |user| %>
            <div class="row" style="margin-bottom:10px; margin-left:5px;">
              <%= link_to("/users/#{user.id}") do %>
              <ul>
                <li style="float:left; margin-right:10px; margin-right:10px;">
                  <div style="display: inline;">
                    <%= image_tag(user.image_name, width: "60px", height: "60px", style: "border-radius:4px; display:inline;") %>
                  </div>
                </li>
                <li style="float:left; margin-right:10px; margin-right:10px;">
                  <div style="display: inline;">
                    <strong><%= user.name %></strong><br>
                    <span><%= user.email %></span><br>
                  </div>
                </li>
              </ul>
              <% end %>
              <div class="stat">
                <a href="<%= following_user_path(user) %>">
                  <strong>
                    <%= user.following.count %>
                  </strong>
                  following
                </a>
                <a href="<%= followers_user_path(user) %>">
                  <strong>
                    <%= user.followers.count %>
                  </strong>
                  followers
                </a>
              </div>
            </div>
            <hr>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
